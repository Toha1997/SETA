<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="android:windowBackground">@color/colorBackground</item>

    </style>

    <style name="AppThemeMain" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ToolbarPopupTheme" parent="android:Widget.Toolbar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.ActionBar">
        <item name="android:icon">@drawable/seta_logo</item>
        <item name="logo">@drawable/seta_logo</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <!-- Definieren benutzerdefinierter Components -->

    <!--<style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
    </style>-->

</resources>
