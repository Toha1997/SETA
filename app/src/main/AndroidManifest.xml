<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hsowl.seta">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.SplashActivity"
            android:configChanges="orientation"
            android:label="@string/labelMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation"
            android:label="@string/labelMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMain">
        </activity>

        <activity
            android:name=".ui.DeviceActivity"
            android:configChanges="orientation"
            android:label="@string/labelDevice"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hsowl.seta.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.CustomSettingsActivity"
            android:configChanges="orientation"
            android:label="@string/labelCustomSettings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hsowl.seta.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/labelAbout"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hsowl.seta.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.HelpActivity"
            android:configChanges="orientation"
            android:label="@string/labelHelp"
            android:screenOrientation="portrait" />

    </application>

</manifest>